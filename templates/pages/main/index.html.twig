{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}

	<div class="text-center">
		<h1>Articles</h1>
		<div class="row my-sm-2 card-body">
			{% for article in articles %}
				<div class="col-sm-4 col-md-4 col-xl-4 d-flex">
					{% include('components/card.html.twig') %}
				</div>
			{% endfor %}
		</div>
		{# display navigation #}
		<div class="navigation d-flex justify-content-center mt-4 mb-4">
			{{ knp_pagination_render(articles) }}
		</div>
	</div>

{% endblock %}

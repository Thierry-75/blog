<h1 class="text-md-justify text-primary">Nouvel article</h1>
{{ form_start(form, {'attr':{'novalidate':'novalidate'}})}}
<div class="form-group">
	{{ form_label(form.title) }}
	{{ form_widget(form.title) }}
	<div class="form-error">
		{{ form_errors(form.title) }}
	</div>
</div>
<div class="form-group">
	{{ form_label(form.content) }}
	{{ form_widget(form.content) }}
	<div class="form-error">
		{{ form_errors(form.content) }}
	</div>
</div>
<div class="form-group">
	{{ form_label(form.photo) }}
	{{ form_widget(form.photo) }}
	<div class="form-error">
		{{ form_errors(form.photo) }}
	</div>
</div>
<div class="form-group">
{% if app.request.attributes.get('_route') == 'app_article_edit' %}
	<legend class="text-center text-danger-emphasis mt-4">Photos enregistr√©es</legend>
	<table class="table mt-1">
		<thead>
			<tr class=" text-center">
				<th scope="col">&nbsp;</th>
				<th scope="col">&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			{% for photo in article.photos %}

				<tr>
					<th scope="row">
						<div><img src="{{ asset('/uploads/photos/' ~ photo.url)}}" alt="photo" width="100px"/></div>
					</th>
					<td>
						<a href="{{ path('article_delete_photo',{ id: photo.id }) }}" data-delete data-token="{{ csrf_token('delete' ~ photo.id) }}">
						<button type="button" class="btn btn-outline-secondary btn-sm rounded-pill mt-3">Supprimer</button>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endif %}
</div>
<div class="form-group">
	{{ form_widget(form.submit) }}
</div>
{{ form_end(form)}}



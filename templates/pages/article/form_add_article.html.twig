<h1 class="text-md-justify text-primary">Nouvel article</h1>
{{ form_start(form, {'attr':{'novalidate':'novalidate'}})}}
<div class="form-group">
	{{ form_label(form.title) }}
	{{ form_widget(form.title) }}
	<div class="form-error">
		{{ form_errors(form.title) }}
	</div>
</div>
<div class="form-group">
	{{ form_label(form.content) }}
	{{ form_widget(form.content) }}
	<div class="form-error">
		{{ form_errors(form.content) }}
	</div>
</div>
<div class="form-group">
	{{ form_label(form.photo) }}
	{{ form_widget(form.photo) }}
	<div class="form-error">
		{{ form_errors(form.photo) }}
	</div>
</div>
<div class="form-group">
	{{ form_widget(form.submit) }}
</div>
{{ form_end(form)}}

{% if app.request.attributes.get('_route') == 'app_article_edit' %}
	<h2>Photos</h2>
	{% for photo in article.photos %}
		<div>
			<img src="{{ asset('/uploads/photos/' ~ photo.url)}}" alt="photo" width="150px"/>
			<a href="{{ path('articles_delete_image',{ id: photo.id }) }}"
			data-delete data-token="{{ csrf_token('delete') }}">Supprimer</a>
		</div>
	{% endfor %}

{% endif %}

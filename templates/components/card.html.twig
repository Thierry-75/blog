<div class="container">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
		{% for article in articles %}
			<div class="col-lg-4">
				<div class="mb-4">
					{% for photo in article.photos | slice(0,1) %}
						{% if photo.url is defined %}
							<img src="{{ asset('uploads/photos/' ~ photo.url ) | imagine_filter('my_thumb_webp') }}" id="card-photo" class="bd-placeholder-img rounded-circle" width="200" height="160" alt="{{ photo.name }}">
						{% endif %}
					{% endfor %}

				</div>
				<h5 class="fw-normal mb-2 text-primary">{{ article.title}}</h5>
				<p>{{ article.content | u.truncate(160,'...') |raw}}</p>
				<div class="d-flex justify-content-between align-items-center">
					<p>&nbsp;&nbsp;
						<a href="{{ path('app_article_show',{slug:article.slug})}}" role="button" class="btn btn-sm btn-outline-primary rounded-pill pl-3 text-black text-small" data-tooltip="tooltip" data-placement="top" title="Lire l'article">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							&nbsp;Lire&nbsp;&nbsp;&nbsp;&nbsp;<i class="bi bi-book">&nbsp;&nbsp;&nbsp;&nbsp;</i>
						</a>
						<p class="float-end">
						<small class="text-body-secondary mt-2">Paru le :&nbsp;{{ article.createdAt | date('d-m-Y') }}</small>
						</p>
					</p>
				</div>
		</div>
		<!-- /.col-lg-4 -->
	{% endfor %}
</div>
<div class="navigation d-flex justify-content-center mt-2 mb-8">{{ knp_pagination_render(articles) }}</div></div>

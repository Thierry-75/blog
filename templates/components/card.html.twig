

        <div class="col">
          <div class="card shadow-sm">
		  {% for photo in article.photos | slice(0,1) %}
			{% if photo.url is defined and photo.url is not null %}
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="{{ asset('uploads/photos/'~photo.url ) | imagine_filter('my_thumb_webp') }}"  
			role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"></img>
				{% endif %}
			{% endfor %}
            <div class="card-body">
			<h6 class="card-title text-primary">{{ article.title }}</h6>
              <p class="card-text">{{ article.content | u.truncate(120,'...') |raw}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn rounded-pill btn-outline-primary">Voir</button>
                </div>
                <small class="text-body-secondary">{{ article.createdAt | date('d/m/Y') }}</small>
              </div>
            </div>
          </div>
        </div>
